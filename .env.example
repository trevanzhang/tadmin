# 项目名称
PROJECT_NAME="TAdmin"

# 环境
ENVIRONMENT="local"

# 数据库配置
# 开发环境自动使用SQLite，生产环境使用PostgreSQL
# SQLite数据库文件路径（相对于backend目录）
SQLITE_DB_PATH=app.db  

# PostgreSQL配置（生产环境使用）
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tadmin

# 超级用户配置
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123

# 前端地址
FRONTEND_HOST=http://localhost:8848

# 后端CORS配置
BACKEND_CORS_ORIGINS=http://localhost:8848

# 密钥
SECRET_KEY=your-secret-key-here-change-in-production-please-use-strong-key

# 令牌配置
# 2小时
ACCESS_TOKEN_EXPIRE_MINUTES=120  

# 30天
REFRESH_TOKEN_EXPIRE_DAYS=30

# 启用令牌轮换
REFRESH_TOKEN_ROTATION=true      